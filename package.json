{
  "name": "@carbon/sync",
  "private": true,
  "license": "Apache-2",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/sync.git"
  },
  "scripts": {
    "ci-check": "yarn prettier:diff && yarn lint",
    "commitmsg": "validate-commit-msg",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"**/*.{md,js}\"",
    "prettier:diff": "prettier --list-different \"**/*.{md,js}\""
  },
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "eslint": "^4.14.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "lint",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!"
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    }
  },
  "dependencies": {
    "parse-link-header": "^1.0.1",
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  }
}
